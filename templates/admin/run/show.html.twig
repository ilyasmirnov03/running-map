{% extends 'base.html.twig' %}

{% block title %}Run{% endblock %}

{% block body %}
    <h1>Run</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ run.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ run.name }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ run.createdAt ? run.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Map</th>
                <td>{{ run.map }}</td>
            </tr>
            <tr>
                <th>Run_date</th>
                <td>{{ run.runDate ? run.runDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_index') }}">back to list</a>

    <a href="{{ path('app_admin_run_edit', {'id': run.id}) }}">edit</a>

    {{ include('admin/run/_delete_form.html.twig') }}
{% endblock %}
