{% extends 'base.html.twig' %}

{% block title %}Les coureurs
{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset("assets/css/font.css") }}">
<link rel="stylesheet" href="{{ asset("assets/css/base.css") }}">
<link rel="stylesheet" href="{{ asset("assets/css/adminRunnerIndex.css") }}">
{% endblock %}

{% block body %}
	<div class="adminHeader">
		<a href="{{path('app_map_index')}}">
			<img src="{{ asset("assets/images/logo-reduit.svg") }}" alt="logo">
		</a>
		<a href="{{ path('app_admin_index') }}">Accueil</a>
	</div>
	<h1>Gérer les profils</h1>
	<a href="{{ path('app_admin_runner_new') }}" class="p-button" style="margin-bottom:50px;">Créer un profil coureur</a>
	<table class="table">
		<thead>
			<tr>
				<th>Login</th>
				<th>Image de profil</th>
			</tr>
		</thead>
		<tbody>
			{% for runner in runners %}
				<tr class="runnerProfile">
					<td>{{ runner.login }}</td>
					<td><img class="tableImage" src="{{asset('/assets/users/'~ runner.picture)}}" alt=""></td>
					<td class="actions">
						<a href="{{ path('app_admin_runner_edit', {'id': runner.id}) }}" class="mod-btn">Modifier</a>
						{{ include('admin/runner/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">Aucun coureur a été enregistré pour l'instant.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
